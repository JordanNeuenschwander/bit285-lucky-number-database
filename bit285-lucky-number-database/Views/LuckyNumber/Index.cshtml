@model lucky_number_database.Models.LuckyNumber
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Input</title>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
            <span>Lucky Number: </span>@Html.TextBoxFor(Model => Model.Number, new { required = "required" })
            <br />
            <span>Balance: </span>@Html.TextBoxFor(Model => Model.Balance, new { required = "required" })
            <input type="submit" />
        }
    </div>
</body>
</html>